<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#C7B9E6"
    android:layout_height="match_parent"
    android:padding="5dp"
    tools:context=".MainActivity">
    <TextView
        android:layout_width="420dp"
        android:layout_height="70dp"
        android:background="#BCA4F3"
        android:text="ACTIVIDAD DEL \n PARCIAL 02"
        android:textSize="22dp"
        android:padding="5dp"
        android:gravity="center_horizontal"
        android:textColor="@color/black"
        android:textStyle="bold|italic"
        />
    <ImageView
        android:id="@+id/Ver_Foto"
        android:layout_width="420dp"
        android:layout_height="480dp"
        android:layout_marginTop="90dp"
        android:padding="5dp"
        android:scaleType="centerCrop"
        android:src="@drawable/fondo"
        />

    <ImageButton
        android:id="@+id/Abri_Ga"
        style="@style/Widget.Material3.Button"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="590dp"
        android:src="@drawable/galeria"
        android:padding="5dp"
        android:scaleType="centerCrop" />
    <ImageButton
        android:id="@+id/Send_Ema"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="590dp"
        android:layout_marginStart="130dp"
        android:src="@drawable/correo"
        android:padding="5dp"
        android:scaleType="centerCrop"
        style="@style/Widget.Material3.Button"/>
    <ImageButton
        android:id="@+id/Send_Wha"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="590dp"
        android:layout_marginStart="270dp"
        android:src="@drawable/whasp"
        android:padding="5dp"
        android:scaleType="fitCenter"
        style="@style/Widget.Material3.Button"/>
</RelativeLayout>